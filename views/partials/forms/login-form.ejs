<form action="/api/loginForm" method="post">

  <div class="mb-8 flex justify-center">
      <img src="https://placehold.co/100x50" alt="Hire Ground logo placeholder image" class="h-12">
  </div>

  <h2 class="text-2xl font-semibold mb-6">Welcome Back</h2>

  <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 w-full flex items-center justify-center">
    <i class="fab fa-google mr-2"></i> Log in with Google
  </button>

  <label class="text-sm font-semibold">Username</label>
  <input 
    type="text" 
    name="userName" 
    id="username" 
    placeholder="Username" 
    autocomplete="username"
    required
    class="w-full p-2 border border-gray-300 rounded mt-1 mb-4" 
  >

  <label for="password" class="text-sm font-semibold">Password</label>
  <input 
    type="password" 
    name="password" 
    id="password" 
    placeholder="Password" 
    autocomplete="new-password"
    required
    class="w-full p-2 border border-gray-300 rounded mt-1 mb-4" 
  >


  <button type="submit" method="post" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600">
    Submit
  </button>   
</form>