<form action="/api/loginForm" method="post" class="bg-white rounded-lg shadow-xl p-16 max-w-sm w-full">
  <div class="mb-9 flex justify-center">
      <img src="/images/name-and-logo.webp" alt="FinGuard Logo" width="250" height="350">
  </div>

  <h2 class="text-2xl font-semibold mb-6">Welcome Back</h2>
  <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 w-full flex items-center justify-center">
    <i class="fab fa-google mr-2"></i> Log in with Google
  </button>



  <label class="text-sm font-semibold">
    Username
  </label>
  <input 
    type="text" 
    name="userName" 
    id="username" 
    placeholder="Username" 
    autocomplete="username"
    required
    class="w-full p-2 border border-gray-300 rounded mt-1 mb-4" 
  >



  <label for="password" class="text-sm font-semibold">
    Password
  </label>
  <input 
    type="password" 
    name="password" 
    id="password" 
    placeholder="Password" 
    autocomplete="new-password"
    required
    class="w-full p-2 border border-gray-300 rounded mt-1 mb-4" 
  >



  <button type="submit" method="post" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600">
    Submit
  </button>   
  
  <a href="#" class="text-sm text-blue-600 hover:underline">Forgot Password?</a>
</form>